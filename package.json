{
  "name": "spider-man-names",
  "version": "1.0.0",
  "description": "Get random Spider-man character name",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src",
    "test": "jest --coverage",
    "test:watch": "jest --watch --verbose",
    "validate": "npm-run-all --parallel lint test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tom-aglow/spidy.git"
  },
  "keywords": ["npm"],
  "author": "Vasilii Goriunov <tom@ohhhh.me> (http://ohhhh.me/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tom-aglow/spidy/issues"
  },
  "homepage": "https://github.com/tom-aglow/spidy#readme",
  "dependencies": {
    "unique-random-array": "1.0.1"
  },
  "devDependencies": {
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.11.0",
    "ghooks": "2.0.4",
    "jest": "22.4.3",
    "npm-run-all": "4.1.2",
    "prettier": "1.12.1"
  },
  "jest": {
    "collectCoverageFrom": ["src/**.js"],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "config": {
    "ghooks": {
      "pre-commit": "yarn validate"
    }
  }
}
